# Environment Configuration for Adam James Tulsa Website
# Copy this file to .env.local and fill in your actual values

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=adam@adamjamestulsa.com
ADMIN_EMAIL=adam@adamjamestulsa.com

# Database (Vercel KV)
KV_REST_API_URL=https://your_kv_url.kv.vercel-storage.com
KV_REST_API_TOKEN=your_kv_api_token_here
KV_REST_API_READ_ONLY_TOKEN=your_kv_readonly_token_here

# Analytics and Tracking
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# API Security
API_SECRET_KEY=your_secret_key_for_admin_endpoints
WEBHOOK_SECRET=your_webhook_verification_secret
CSRF_SECRET=your_csrf_token_secret

# External Integrations
CALENDLY_API_KEY=your_calendly_api_key_here
CALENDLY_USER_URI=https://api.calendly.com/users/your_user_id

# Social Media APIs (for social proof)
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here
GOOGLE_BUSINESS_API_KEY=your_google_business_api_key_here

# Newsletter Service
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_LIST_ID=your_mailchimp_list_id_here

# SMS Service (for notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# File Upload Service
UPLOADTHING_SECRET=your_uploadthing_secret_here
UPLOADTHING_APP_ID=your_uploadthing_app_id_here

# Monitoring and Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Environment
NODE_ENV=production
NEXT_PUBLIC_SITE_URL=https://adamjamestulsa.com
NEXT_PUBLIC_API_URL=https://adamjamestulsa.com/api

# Rate Limiting
UPSTASH_REDIS_REST_URL=https://your_redis_url.redis.vercel-storage.com
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# Search Service
ALGOLIA_APPLICATION_ID=your_algolia_app_id_here
ALGOLIA_API_KEY=your_algolia_api_key_here
ALGOLIA_SEARCH_KEY=your_algolia_search_key_here

# Payment Processing (for future use)
PAYMENT_SECRET_KEY=your_payment_secret_key_here
PAYMENT_PUBLISHABLE_KEY=your_payment_publishable_key_here
PAYMENT_WEBHOOK_SECRET=your_payment_webhook_secret_here

# CRM Integration
HUBSPOT_API_KEY=your_hubspot_api_key_here
SALESFORCE_CLIENT_ID=your_salesforce_client_id_here
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret_here